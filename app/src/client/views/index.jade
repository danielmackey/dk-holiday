div#wrapper.clearfix
  a(href='http://designkitchen.com', class='dk-button', target='_blank')
    span.left from us
    span.right with love

  a(id='see-past-holidays', class='scrooge circle')
    span Videos Of
    span.large DK Holidays
    span Past
    span.inner-circle

  a(href='https://github.com/designkitchen/dk-holiday', class='github circle', target='_blank')
    span get the
    span.large source code
    span on github
    span.inner-circle


  header#hidden-animations
    h1.red Holi<span class="hyphen">-</span>cra<span class="y">y</span><span class="hyphen">-</span>m<span class="a">a</span>tic</h1>
    section#description Every 40 @ tweets we get, we’ll set off the <span class="red">Holicraymaker™</span> in one of our conference rooms.
    .northstar
    .kinara
    .snowman
    .star
    .ornament
    .tree


  section#container
    #tweetometer
      #full
        #full-bar
          #full-inner
        #tweet-counter
    #tweetometer-title tweets til next holicray


    #video
      iframe(src="http://www.ustream.tv/embed/9893570", width="670", height="344", scrolling="no", frameborder="0", style="border: 0px none transparent;")
      span holi-cray-vision live from designkitchen
      #top-rail
      #left-rail
      #bottom-rail
      #right-rail

    #tweet
      span.red Tweet at <a href="http://www.twitter.com/designkitchen" target="_blank">@designkitchen</a> to set off our <span class="green">Holicraymaker&trade;</span></span>
      #tweet-box


  section#column-top
    #total-tweets
      #total-tweets-number
      #total-tweets-title total tweets
      #total-crays-number
      #total-crays-title total crays
      #current-tweet


  section#column-mid
      span.up-next UP NEXT
      span.history HISTORY


  section#column-repeat
    article#up-next
      ul
      a(href='#', class='load-more') load more in the queue

    article#history
      ul
      a(href='#', class='load-more') load more in the history




    #latest-tpl.tpl
      #current-tweet-number.red.id {{ id }}
      #current-action.red @
        a(href='http://twitter.com/{{ handle }}', class='handle', target='_blank') {{ handle }}
        span &nbsp;just made&nbsp;
        span.event {{ event }}
      #current-tweet-text.green.title {{ title }}


    #history-tpl.tpl
      li(data-bind-tweet='{{ title }}', class='title')
        span.left.red.id {{ id }}
        span.right @
          a(href='http://twitter.com/{{ handle }}', class='handle', target='_blank')
            {{ handle }}
          span&nbsp;made&nbsp;
          span.event {{ event }}


    #queue-tpl.tpl
      li(data-bind-tweet='{{ title }}', class='title')
        span.left.red.id {{ id }}
        span.right @
          a(href='http://twitter.com/{{ handle }}', class='handle', target='blank')
            {{ handle }}
          span&nbsp;is about to make&nbsp;
          span.event {{ event }}



    #overlay
      #shade
      #holidays-past
        h2 Videos of DK Holidays Past
        ul.playlist
          li
            a#2008 2008
          li
            a#2010 2010

        #video
